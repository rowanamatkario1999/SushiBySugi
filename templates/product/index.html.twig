{% extends 'admin.base.html.twig' %}
{% block body %}
    <div class="container w-50">
        <h1 class="mt-3 text-center mb-4">Producten</h1>
        <h3>Inside Out Rolls</h3>
        <table class="table">
            <thead>
            <tr>
                <th>Naam</th>
                <th>Prijs</th>
                <th>Beschrijving</th>
                <th>Aanpassing</th>
                <th>Aanpassing</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                {% if product.categoryId.name == 'Inside Out Roll' %}
                    <tr>
                        <td>- {{ product.name }}</td>
                        <td>€ {{ product.price }}</td>
                        <td>{{ product.description }}</td>
                        <td>{{ product.categoryId.name }}</td>
                        <td>
                            <a href="{{ path('product_show', {'id': product.id}) }}">Tonen</a>
                            <a href="{{ path('product_edit', {'id': product.id}) }}">Bewerken</a>
                            <form method="post" action="{{ path('product_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                <button class="btn">Verwijderen</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                {% endif %}
            {% else %}
                <tr>
                    <td colspan="4">Geen resultaten gevonden</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

