{% extends 'admin.base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-3">Sushi</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Naam</th>
                <th>Prijs</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>
                        <a href="{{ path('product_show', {'id': product.id}) }}">Tonen</a>
                        <a href="{{ path('product_edit', {'id': product.id}) }}">Bewerken</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Geen resultaten gevonden</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


        <button class="btn btn-danger"><a href="{{ path('product_new') }}">Sushi Toevoegen</a></button>
    </div>

{% endblock %}
