{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <h1 class="mt-3">Menulijst</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Naam</th>
                <th>Prijs</th>
                <th>Beschrijving</th>
            </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.description }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Geen resultaten gevonden</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}